<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SegitigaSiku">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/titleConstraint"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <EditText android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:inputType="textPersonName"
                  android:hint="Alas"
                  android:ems="10"
                  android:id="@+id/etalas"
                  android:layout_marginStart="8dp"
                  app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                  android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginRight="8dp" android:layout_marginTop="52dp"
                  app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.104"/>

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Tinggi"
                android:ems="10"
                android:id="@+id/ettinggi"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                app:layout_constraintHorizontal_bias="0.104" android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/etalas"/>
        <Button
                android:text="Hitung"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnhitung"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/ettinggi"
                android:layout_marginTop="32dp" app:layout_constraintHorizontal_bias="0.061"/>
        <TextView
                android:text="Luas ="
                android:layout_width="69dp"
                android:layout_height="11dp"
                android:id="@+id/luas"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/btnhitung"
                android:layout_marginTop="16dp" app:layout_constraintHorizontal_bias="0.058"/>
        <TextView
                android:text="Keliling ="
                android:layout_width="83dp"
                android:layout_height="20dp"
                android:id="@+id/keliling"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@+id/luas" app:layout_constraintHorizontal_bias="0.06"/>
        <Button
                android:text="Share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnshare" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/keliling" app:layout_constraintHorizontal_bias="0.061"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>