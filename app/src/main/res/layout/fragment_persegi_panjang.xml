<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".PersegiPanjang">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/titleConstraint"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <EditText android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:inputType="textPersonName"
                  android:hint="Panjang"
                  android:ems="10"
                  android:id="@+id/panjang" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginRight="8dp" android:layout_marginStart="8dp"
                  app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                  app:layout_constraintHorizontal_bias="0.104" android:layout_marginTop="16dp"
                  app:layout_constraintTop_toTopOf="parent"/>

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Lebar"
                android:ems="10"
                android:id="@+id/lebar" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/panjang" app:layout_constraintHorizontal_bias="0.104"/>
        <Button
                android:text="Hitung"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="28dp"
                app:layout_constraintTop_toBottomOf="@+id/lebar" app:layout_constraintHorizontal_bias="0.061"/>
        <TextView
                android:text="Luas ="
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/luas" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/button" app:layout_constraintHorizontal_bias="0.056"/>
        <TextView
                android:text="Keliling ="
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/keliling" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/luas" android:layout_marginTop="16dp"
                app:layout_constraintHorizontal_bias="0.059"/>
        <Button
                android:text="Share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnshare" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/keliling" app:layout_constraintHorizontal_bias="0.061"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>